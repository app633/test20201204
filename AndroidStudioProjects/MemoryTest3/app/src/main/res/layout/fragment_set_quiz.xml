<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".SetQuizFragment">

    <Button
        android:id="@+id/set_ok_button"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:text="開始"
        android:textSize="30dp"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="問題数"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"/>

        <Spinner
            android:id="@+id/questionNumSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/questionNumberList"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="該当件数"
                android:textSize="20dp"
                android:layout_marginRight="6dp"/>

            <TextView
                android:id="@+id/numberOfHit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aa"
                android:textSize="20dp"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp">


        <CheckBox
            android:id="@+id/isRandomCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全ての問題からランダムに出題"
            android:textSize="20dp"/>

        <CheckBox
            android:id="@+id/isFavoriteCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="お気に入り"
            android:textSize="20dp"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/isHumanCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="実在人物"
                android:textSize="20dp" />

            <CheckBox
                android:id="@+id/isAnimeCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="アニメキャラ"
                android:textSize="20dp"
                android:layout_marginLeft="20dp" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/isRemoveNicheCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ニッチな問題を除く"
            android:textSize="20dp"
            android:layout_marginTop="10dp" />

        <CheckBox
            android:id="@+id/isOnlyNicheCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ニッチな問題のみ"
            android:textSize="20dp"
            android:layout_marginTop="10dp" />



    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="以下 詳細タグ"
        android:textSize="20dp"
        android:layout_marginTop="20dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/isSingerCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="歌手"
                android:textSize="20dp"
                android:layout_marginTop="10dp" />

            <CheckBox
                android:id="@+id/isEntertainerCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="芸人"
                android:textSize="20dp"
                android:layout_marginTop="10dp" />

            <CheckBox
                android:id="@+id/isBaseballCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="野球選手"
                android:textSize="20dp"
                android:layout_marginTop="10dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="40dp">

            <CheckBox
                android:id="@+id/isIdolCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="アイドル"
                android:textSize="20dp"
                android:layout_marginTop="10dp" />

            <CheckBox
                android:id="@+id/isAthleteCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="スポーツ選手"
                android:textSize="20dp"
                android:layout_marginTop="10dp" />


            <CheckBox
                android:id="@+id/isFootballCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="サッカー選手"
                android:textSize="20dp"
                android:layout_marginTop="10dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>